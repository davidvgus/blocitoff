#content
  Todo List
  %table{class:"table table-striped table-bordered table-hover"}
    %tr
      %th Description
      %th Days left
      %th complete
    - if @todos
      - @todos.each do |item|
        %tr
          %td= item.description
          %td= item.time_left
          %td= link_to('Delete', todo_path(item), :method => :delete)
          %td= check_box_tag("delete_checkbox_#{item.id}")
    %tr
      %td= link_to("Create new todo", new_todo_path)
      %td
      %td
